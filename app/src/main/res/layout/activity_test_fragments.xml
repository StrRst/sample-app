<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/application_toolbar" />

    <GridLayout
        android:id="@+id/buttons_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@id/fragment_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_show_first_fragment"
            style="@style/ButtonTheme"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="Show first fragment"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_show_second_fragment"
            style="@style/ButtonTheme"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="Show second fragment"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_hide_first_fragment"
            style="@style/ButtonTheme"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="Hide first fragment"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_hide_second_fragment"
            style="@style/ButtonTheme"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="Hide second fragment"
            android:textSize="12sp" />

    </GridLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttons_block" />

</androidx.constraintlayout.widget.ConstraintLayout>